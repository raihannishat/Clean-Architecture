      }
    },
    "QueryPatterns": {
      "search": {
        "Pattern": "search",
        "Template": "Searches {entities}",
        "UsePlural": true,
        "MatchType": "Contains"
      },
      "filter": {
        "Pattern": "filter",
        "Template": "Filters {entities}",
        "UsePlural": true,
        "MatchType": "Contains"
      },
      "count": {
        "Pattern": "count",
        "Template": "Counts {entities}",
        "UsePlural": true,
        "MatchType": "Contains"
      },
      "exists": {
        "Pattern": "exists",
        "Template": "Checks if {entity} exists",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "validate": {
        "Pattern": "validate",
        "Template": "Validates {entity} data",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "getPlural": {
        "Pattern": "^get.*s$",
        "Template": "Gets {entities}",
        "UsePlural": true,
        "MatchType": "Regex"
      }
    },
    "CommandPatterns": {
      "import": {
        "Pattern": "import",
        "Template": "Imports {entities}",
        "UsePlural": true,
        "MatchType": "Contains"
      },
      "export": {
        "Pattern": "export",
        "Template": "Exports {entities}",
        "UsePlural": true,
        "MatchType": "Contains"
      },
      "sync": {
        "Pattern": "sync",
        "Template": "Synchronizes {entity} data",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "migrate": {
        "Pattern": "migrate",
        "Template": "Migrates {entity} data",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "restore": {
        "Pattern": "restore",
        "Template": "Restores a {entity}",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "backup": {
        "Pattern": "backup",
        "Template": "Backs up {entity} data",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "refresh": {
        "Pattern": "refresh",
        "Template": "Refreshes {entity} data",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "reset": {
        "Pattern": "reset",
        "Template": "Resets {entity} data",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "lock": {
        "Pattern": "lock",
        "Template": "Locks a {entity}",
        "UsePlural": false,
        "MatchType": "Contains"
      },
      "unlock": {
        "Pattern": "unlock",
        "Template": "Unlocks a {entity}",
        "UsePlural": false,
        "MatchType": "Contains"
      }
    },
    "FallbackTemplates": {
      "DefaultQuery": "Executes {action} query on {entity}",
      "DefaultCommand": "Executes {action} command on {entity}",
      "DefaultOperation": "Executes {action} {operationType} on {entity}",
      "GetByDefault": "Gets a {entity} by {field}",
      "ContextualQuery": "Executes {action} query on {entity} {?IsCached ? 'from cache' : 'from database'} {?IncludeDeleted ? 'including deleted items' : 'active items only'}",
      "ContextualCommand": "Executes {action} command on {entity} {?IsAsync ? 'asynchronously' : 'synchronously'} {?RequiresTransaction ? 'within transaction' : ''}"
    },
    "DynamicRules": {
      "TimeBasedTemplates": {
        "Enabled": true,
        "Rules": [
          {
            "Condition": "Hour >= 9 && Hour <= 17",
            "TemplateSuffix": " during business hours"
          },
          {
            "Condition": "DayOfWeek == 'Saturday' || DayOfWeek == 'Sunday'",
            "TemplateSuffix": " on weekend"
          }
        ]
      },
      "UserBasedTemplates": {
        "Enabled": true,
        "Rules": [
          {
            "Condition": "UserRole == 'Admin'",
            "TemplatePrefix": "[Admin Operation] "
          },
          {
            "Condition": "UserRole == 'Guest'",
            "TemplatePrefix": "[Guest Operation] "
          }
        ]
      }
    },
    "BusinessContextRules": {
      "RequiresApproval": ["User", "Author", "Category"],
      "IsValidationRequired": ["BlogPost", "Comment", "User"],
      "IsCached": ["BlogPost", "Category", "Tag"],
      "RequiresTransaction": ["User", "Author", "BlogPost"],
      "IsAsync": ["Email", "Notification", "Export"]
    }
  }
}
