    "FieldDescriptions": {
      "id": {
        "Template": "Gets a {entity} by ID",
        "UsePlural": false
      },
      "email": {
        "Template": "Gets a {entity} by email address",
        "UsePlural": false
      },
      "name": {
        "Template": "Gets a {entity} by name",
        "UsePlural": false
      },
      "title": {
        "Template": "Gets a {entity} by title",
        "UsePlural": false
      },
      "slug": {
        "Template": "Gets a {entity} by URL slug",
        "UsePlural": false
      },
      "username": {
        "Template": "Gets a {entity} by username",
        "UsePlural": false
      },
      "category": {
        "Template": "Gets {entities} by category",
        "UsePlural": true
      },
      "author": {
        "Template": "Gets {entities} by author",
        "UsePlural": true
      },
      "user": {
        "Template": "Gets {entities} by user",
